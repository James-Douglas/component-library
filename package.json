{
  "name": "@comparethemarketau/manor",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@babel/runtime": "^7.0.0",
    "react-app-polyfill": "^1.0.3"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "commit": "git-cz",
    "build": "lerna run build",
    "tdd": "jest --coverage --watchAll",
    "test": "cross-env JEST_SILENT_REPORTER_DOTS=true jest --reporters=jest-silent-reporter --coverage --watchAll",
    "test:ci": "cross-env CI=true jest",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public",
    "lint": "eslint --ext .js --ignore-pattern 'packages/**/lib/*' ./packages",
    "update-ctm-deps": "lerna exec --parallel \"npm-check-updates '/^@comparethemarketau/.*$/' --upgrade --packageManager yarn\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test:ci",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "publishConfig": {
    "registry": "https://nexus.comparethemarket.com.au/repository/platform-packages/",
    "access": "public",
    "tag": "latest"
  },
  "release": {
    "branch": "master",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-decorators": "^7.13.5",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "@babel/traverse": "7.7.2",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@rollup/plugin-babel": "^5.0.0",
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@rollup/plugin-url": "^4.0.2",
    "@sackrin/react-micro-ui": "^1.6.0",
    "@sackrin/react-micro-ui-hooks": "^1.3.0",
    "@semantic-release/commit-analyzer": "^6.3.3",
    "@semantic-release/release-notes-generator": "^7.3.5",
    "@storybook/addon-a11y": "v6.1.1",
    "@storybook/addon-actions": "v6.1.1",
    "@storybook/addon-docs": "v6.1.1",
    "@storybook/addon-knobs": "v6.1.1",
    "@storybook/addon-links": "v6.1.1",
    "@storybook/addon-notes": "v6.0.0-alpha.6",
    "@storybook/addon-viewport": "v6.1.1",
    "@storybook/addons": "v6.1.1",
    "@storybook/preset-create-react-app": "^3.1.5",
    "@storybook/react": "v6.1.1",
    "@storybook/source-loader": "v6.1.1",
    "@testing-library/dom": "^7.29.4",
    "@testing-library/jest-dom": "^4.1.0",
    "@testing-library/react": "^9.1.4",
    "@testing-library/react-hooks": "3.2.1",
    "@testing-library/user-event": "^12.6.2",
    "autoprefixer": "^9.6.1",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-styled-components": "^1.10.6",
    "commitizen": "^4.0.3",
    "cross-env": "^6.0.0",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "^6.4.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-react-app": "^5.0.2",
    "eslint-plugin-flowtype": "^4.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "7.20.6",
    "eslint-plugin-react-hooks": "2.2.0",
    "husky": "^3.0.5",
    "identity-obj-proxy": "^3.0.0",
    "import-index-generator": "^0.2.1",
    "jest": "^24.9.0",
    "jest-silent-reporter": "^0.1.2",
    "jest-static-stubs": "^0.0.1",
    "jest-styled-components": "^7.0.0",
    "lerna": "^3.18.3",
    "npm-check-updates": "^9.0.2",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "react-is": "^16.12.0",
    "react-test-renderer": "^16.9.0",
    "rollup": "2.12.0",
    "rollup-plugin-delete": "^1.2.0",
    "rollup-plugin-filesize": "^8.0.2",
    "rollup-plugin-ignore-import": "^1.3.2",
    "rollup-plugin-includepaths": "^0.2.3",
    "rollup-plugin-local-resolve": "^1.0.7",
    "rollup-plugin-node-externals": "^2.1.6",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-postcss": "^3.1.1",
    "rollup-plugin-smart-asset": "^2.0.7",
    "semantic-release": "^15.13.24",
    "styled-components": "5.1.1",
    "tailwindcss": "^1.1.2",
    "tailwindcss-typography": "^2.2.0"
  },
  "peerDependencies": {
    "moment": "^2.24.0",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "styled-components": "^5.0.0"
  }
}
